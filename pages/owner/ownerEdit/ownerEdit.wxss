.edit{
  border-bottom:2rpx solid #e2e2e2;
  position:relative;
}
.edit>view{
  line-height: 140rpx;
  font-size: 32rpx;
  color:#333;
  text-indent: 20rpx;
}
.edit-img{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  top:20rpx;
  right: 80rpx;
}
.edit-right{
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  top:50rpx;
}
.edit-name{
  border-bottom:2rpx solid #e2e2e2;
  position:relative;
}
.edit-name{
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  line-height: 80rpx;
}
.edit-name>view:nth-child(1){
  font-size: 32rpx;
  color:#333;
  text-align: left;
  text-indent: 20rpx; 
  width: 50%;
}
.edit-name>view:nth-child(2){
  width: calc(50% - 80rpx);
  font-size: 32rpx;
  color:#333;
  text-align: right;
  padding-right: 80rpx;
}
.edit-name-right{
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  top:25rpx;
}
.msak{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0px;
  left: 0px;
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
}
.msak-no{
  position: fixed;
  width: 100%;
  height: 100%;
  top:0px;
  left: 0px;
  background-color: rgba(0, 0, 0, 0.3);
}
.msak-content{
  position: relative;
  width: 650rpx;
  height: 320rpx;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.msak-title{
  padding: 28rpx 0rpx;
  border-bottom:2rpx solid #e2e2e2;
  text-align: center;
  color:#333;
  font-size: 32rpx;
  font-weight:bold;
  width: 100%;
  margin-bottom: 30rpx;
}
.msak-con-content>view{
  width: 200rpx;
  font-size: 28rpx;
  float: left;
  text-align: right;
  padding: 20rpx 10rpx;
  height: 30rpx;
  line-height: 30rpx;
}
.msak-con-content>input{
  width: 414rpx;
  font-size: 28rpx;
  float: left;
  padding: 10rpx 10rpx;
  height: 30rpx;
}
.msak-con-content>textarea{
  width: 414rpx;
  font-size: 28rpx;
  float: left;
  padding: 19rpx 10rpx;
}
.msak-btn{
  position: absolute;
  bottom:0px;
  left: 0px;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  border-top:2rpx solid #e2e2e2;
}
.msak-btn>view{
  width: 50%;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color:#333;
}
.msak-btn>view:nth-child(2){
  color:#44a0b7;
}