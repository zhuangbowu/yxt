.index-head{
  width:100%;
  display: block;
  margin: 80rpx auto 120rpx;
}
.index-logo{
  margin-left: 10%;
  margin-top: 60rpx;
  width: 240rpx;
}
.sign{
  width: calc(100% - 80rpx);
  margin: 20rpx 40rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  border-bottom: 2rpx solid #e2e2e2;
}
.sign>image{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.sign>input{
  font-size: 30rpx;
  color:#333;
  line-height: 80rpx;
  height: 80rpx;
}
.sign-in{
  position: fixed;
  bottom:0rpx;
  left: 0rpx;
  width: 100%;
  height: 100rpx;
  background-color: #FFCD00;
  color:#fff;
  line-height: 100rpx;
  text-align: center;
  font-size: 36rpx;
}