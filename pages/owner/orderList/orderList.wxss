page{
  background-color: #f1f1f1;
}
.drop-down-choice-seach{
  background-color: #e2e2e2;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  position: relative;
}
.drop-down-choice-seach>input{
  width: 560rpx;
  background-color: #fff;
  font-size: 28rpx;
  padding-top:10rpx;
  padding-bottom:10rpx;
  margin: 20rpx 40rpx 20rpx 0rpx;
  margin-left: 40rpx;
  padding-left: 20rpx;
  border-radius:10rpx;
}
.drop-down-choice-seach>view{
  position: absolute;
  font-size: 32rpx;
  color:#333;
  top:36rpx;
  right: 40rpx;
}
.drop-down-choice{
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.drop-down-choice>.views{
  width: 100%;
  height: 80rpx;
  line-height:80rpx;
  font-size: 32rpx;
  padding-left: 40rpx;
  border-bottom: 2rpx solid #e2e2e2;
}
.order-bak{
  background: #fff;
  border-bottom:10rpx solid #f1f1f1;
}
.order{
 width: calc(100% - 40rpx);
 padding: 0rpx 20rpx;
 display: flex;
 flex-direction: row;
 flex-wrap: wrap;
}
.order>view{
  width: 50%;
  line-height: 70rpx;
  height: 70rpx;
  position: relative;
}
.order>view:nth-child(odd){
  text-align: left;
}
.order>view:nth-child(even){
  text-align: right;
}
.order-name{
  font-size: 32rpx;
  color:#333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; 
}
.order-name>text{
  font-size: 32rpx;
  color:#666;
}
.order-state>view{
  position: absolute;
  top:10rpx;
  right: 0rpx;
  text-align: center;
  font-size: 28rpx;
  color:#fff;
  background-color: #00c15c;
  line-height: 60rpx;
  width: 120rpx;
  border-radius: 6rpx;
}
.order-shop{
  font-size: 32rpx;
  color:#333;
}
.order-shop2{
  font-size: 32rpx;
  color:#666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; 
}
.order-retreat{
  text-align: right;
  width: calc(100% - 40rpx);
  padding: 0rpx 20rpx;
  color:#666;
  font-size: 32rpx;
  line-height: 50rpx;
}
.owner-fixed{
  width: 120rpx;
  height: 120rpx;
  position: fixed;
  bottom: 120rpx;
  right: 20rpx;
  background-color: #fff;
  border-radius:50%;
}
.owner-fixed>image{
  width: 120rpx;
  height: 120rpx;
}